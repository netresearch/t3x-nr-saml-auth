# TYPO3 DDEV Development Aliases
alias cd12='cd /var/www/html/.build/v12'
alias cd13='cd /var/www/html/.build/v13'
alias cdr='cd /var/www/html'

# TYPO3 Console shortcuts
alias t3-12='/var/www/html/.build/v12/vendor/bin/typo3'
alias t3-13='/var/www/html/.build/v13/vendor/bin/typo3'

# Cache clearing
alias cc12='t3-12 cache:flush'
alias cc13='t3-13 cache:flush'
